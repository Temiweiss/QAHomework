<div class="container">
    <main role="main" class="pb-3" style="margin-top: 80px;">
        <div class="row">
            <div class="col-md-8 offset-md-2 card card-body bg-light">
                <h2>Ask a question</h2>
                <form method="post" action="/questions/addquestion">
                    <input class="form-control" name="title" placeholder="Title" />
                    <br />
                    <textarea class="form-control" placeholder="Type your question here..." rows="10" name="text"></textarea>
                    <br />
                    <select multiple class="form-control" id="tags" name="tags"></select>
                    <br />
                    <button class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>

    </main>
</div>
